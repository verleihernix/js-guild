{
    "compilerOptions": {
      "target": "ES2020",          
      "module": "commonjs",         
      "strict": true,               
      "esModuleInterop": true,      
      "skipLibCheck": true,         
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",           
      "rootDir": "./src",           
      "declaration": true,         
      "declarationDir": "./dist",   
      "types": ["node"],           
      "typeRoots": ["./node_modules/@types"], 
      "strictNullChecks": true,     
      "baseUrl": "./",
      "paths": {
        "*": ["src/*"]             
      }
    },
    "include": ["src/**/*.ts"],    
    "exclude": ["node_modules"]   
  }
  